  <main>
    <section class="gallery container">
      <h2>Art</h2>
      <p class="gallery-sub">A curated selection of recent work</p>

      <div class="grid" id="gallery">
        <figure tabindex="0">
          <img src="images/art1.svg" alt="Artwork 1" data-caption="Artwork 1 — placeholder">
          <figcaption>Artwork 1</figcaption>
        </figure>
        <figure tabindex="0">
          <img src="images/art2.svg" alt="Artwork 2" data-caption="Artwork 2 — placeholder">
          <figcaption>Artwork 2</figcaption>
        </figure>
        <figure tabindex="0">
          <img src="images/art3.svg" alt="Artwork 3" data-caption="Artwork 3 — placeholder">
          <figcaption>Artwork 3</figcaption>
        </figure>
        <figure tabindex="0">
          <img src="images/art4.svg" alt="Artwork 4" data-caption="Artwork 4 — placeholder">
          <figcaption>Artwork 4</figcaption>
        </figure>
      </div>
    </section>
